#############################
# Server
#############################
# App will run on this port
PORT=3247

#############################
# Development Database
#############################
DB_USERNAME_DEV=postgres
DB_PASSWORD_DEV=postgres
DB_NAME_DEV=rest_api
DB_HOST_DEV=localhost
DB_PORT_DEV=5432

#############################
# Production Database
#############################
DB_USERNAME_PROD=your_prod_username
DB_PASSWORD_PROD=your_prod_password
DB_NAME_PROD=library_prod
DB_HOST_PROD=your-prod-hostname
DB_PORT_PROD=5432

#############################
# JWT Authentication
#############################
JWT_SECRET=supersecretjwtkey_dev
JWT_EXPIRES_IN=1d

# For production, override with stronger secret
JWT_SECRET_PROD=supersecretjwtkey_prod
JWT_EXPIRES_IN_PROD=1h

#############################
# Other useful environment variables
#############################
# Node environment: development | production | test
NODE_ENV=development

# API base URL
API_BASE_URL=http://localhost:3247

# CORS allowed origins (comma separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
